<%= render 'shared/page_title', title: "Create a new Style" %>

<%= render 'shared/errors', obj: @style %>

<div class="row">
  <div class="well col-md-8 col-md-offset-2">
    <%= form_for @style do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %>
   
    <%= f.submit 'Write the name of your new style then click or tap to Save', class: "btn btn-success" %>
  <% end %>
 </div>
</div>
      
    
  
  
  