

<div class="row">
  <div class="well col-md-8 col-md-offset-2">
   <%= form_for(@page, html: { multipart: true }) do |f| %>
    <br><br>
     Upload landing picture, max size 5 megabytes
    <span class="picture">
      <%= f.file_field :welcomepic, accept: 'image/jpeg,image/gif,image/png' %>
    </span>
        <%= f.submit(@page.new_record? ? ' Tap or click here to save your landing picture' : 'Tap or click here to save your landing picture', class: "btn btn-success") %>
   <% end %>
 </div>
</div>

<script type="text/javascript">
  $('#recipe_picture').bind('change', function(){
    size_in_megabytes = this.files[0].size/2048/2048;
    if (size_in_megabytes > 5) {
      alert('Maximum file size is 5MB. Please choose a smaller file.')
    }
  });
</script>